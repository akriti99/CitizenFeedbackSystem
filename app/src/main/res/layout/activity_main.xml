                    android:layout_rowWeight="1"
                    app:cardElevation="12dp"
                    app:contentPadding="8dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="6dp">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/mines"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dept8"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="0"
                    android:layout_rowWeight="1"
                    app:cardElevation="12dp"
                    app:contentPadding="8dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="6dp">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/coal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dept9"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0"
                        android:layout_rowWeight="1"
                        app:cardElevation="12dp"
                        app:contentPadding="8dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="6dp">

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="8dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/finance"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dept10"
                                android:textSize="18sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0"
                        android:layout_rowWeight="1"
                        app:cardElevation="12dp"
                        app:contentPadding="8dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="6dp">

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="8dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/railways"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dept11"
                                android:textSize="18sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0"
                        android:layout_rowWeight="1"
                        app:cardElevation="12dp"
                        app:contentPadding="8dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="6dp">

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="8dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/science"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dept12"
                                android:textSize="18sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</RelativeLayout>
</ScrollView>